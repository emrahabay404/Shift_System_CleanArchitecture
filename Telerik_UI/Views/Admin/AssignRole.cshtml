@*@model List<RoleAssignViewModel>*@
@model List<Telerik_UI.Models.DTOs.RoleAssignViewModel>


@{
   ViewData["Title"] = "AssignRole";
   Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Assign Role Details</h1>
<br />
<br />

<form method="post" style="font:x-large">
   @for (int i = 0; i < Model.Count; i++)
   {
      <div class="form-check">
         <input type="hidden" asp-for="@Model[i].RoleId" />
         <input type="hidden" asp-for="@Model[i].Name" />
         <input type="checkbox" asp-for="@Model[i].Exists" class="form-check-input" />
         <label class="form-check-label" for="@Model[i].Exists">@Model[i].Name</label>
      </div>
   }
   <br />
   <button type="submit" class="btn btn-success">Değişiklikleri Kaydet</button>
</form>
<br />
<a href="/Admin/UserRoleList/" class="btn btn-primary">Kullanıcı Listesine Dön</a>
