{
   "Routes": [

      //auth login & register
      {
         "UpstreamPathTemplate": "/api/auth/login",
         "UpstreamHttpMethod": [ "Post" ],
         "DownstreamScheme": "https",
         "DownstreamPathTemplate": "/api/auth/login",
         "DownstreamHostAndPorts": [
            {
               "Host": "localhost",
               "Port": 7157
            }
         ]
      },
      {
         "UpstreamPathTemplate": "/api/auth/registeration",
         "UpstreamHttpMethod": [ "Post" ],
         "DownstreamScheme": "https",
         "DownstreamPathTemplate": "/api/auth/registeration",
         "DownstreamHostAndPorts": [
            {
               "Host": "localhost",
               "Port": 7157
            }
         ]
      },

      //shifts
      {
         "UpstreamPathTemplate": "/api/shift",
         "UpstreamHttpMethod": [ "Get", "Post", "Delete", "Update" ],
         "DownstreamScheme": "https",
         "DownstreamPathTemplate": "/api/shift",
         "DownstreamHostAndPorts": [
            {
               "Host": "localhost",
               "Port": 7157
            }
         ]
      },


      //eski Ã¶rnekler
      {
         "UpstreamPathTemplate": "/api/shoes",
         "UpstreamHttpMethod": [ "Get" ],
         "DownstreamPathTemplate": "/api/shoes",
         "DownstreamScheme": "https",
         "DownstreamHostAndPorts": [
            {
               "Host": "localhost",
               "Port": 7116
            }
         ],
         "AuthenticationOptions": {
            "AuthenticationProviderKey": "Bearer",
            "AllowedScopes": [ "shoe.read" ]
         }
      },
      {
         "UpstreamPathTemplate": "/api/shoes/{id}",
         "UpstreamHttpMethod": [ "Delete" ],
         "DownstreamPathTemplate": "/api/shoes/{id}",
         "DownstreamScheme": "https",
         "DownstreamHostAndPorts": [
            {
               "Host": "localhost",
               "Port": 7116
            }
         ],
         "AuthenticationOptions": {
            "AuthenticationProviderKey": "Bearer"
         },
         "RouteClaimsRequirement": {
            "Role": "Administrator"
         }
      }


   ],
   "GlobalConfiguration": {
      "BaseUrl": "https://localhost:7107"
   }
}
