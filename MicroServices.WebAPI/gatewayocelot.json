{
   "Routes": [

      //auth login & register
      {
         "UpstreamPathTemplate": "/api/auth/login",
         "UpstreamHttpMethod": [ "Post" ],
         "DownstreamScheme": "https",
         "DownstreamPathTemplate": "/api/auth/login",
         "DownstreamHostAndPorts": [
            {
               "Host": "localhost",
               "Port": 7157
            }
         ]
      },
      {
         "UpstreamPathTemplate": "/api/auth/registeration",
         "UpstreamHttpMethod": [ "Post" ],
         "DownstreamScheme": "https",
         "DownstreamPathTemplate": "/api/auth/registeration",
         "DownstreamHostAndPorts": [
            {
               "Host": "localhost",
               "Port": 7157
            }
         ]
      },

      //shifts
      {
         "UpstreamPathTemplate": "/api/shift",
         "UpstreamHttpMethod": [ "Get", "Post", "Delete", "Update" ],
         "DownstreamScheme": "https",
         "DownstreamPathTemplate": "/api/shift",
         "DownstreamHostAndPorts": [
            {
               "Host": "localhost",
               "Port": 7157
            }
         ],
         "AuthenticationOptions": {
            "AuthenticationProviderKey": "Bearer"
         },
         "RouteClaimsRequirement": {
            "Role": "User"
         }
      },

      //Products
      {
         "UpstreamPathTemplate": "/api/products",
         "UpstreamHttpMethod": [ "Get", "Post", "Delete", "Update" ],
         "DownstreamScheme": "https",
         "DownstreamPathTemplate": "/api/products",
         "DownstreamHostAndPorts": [
            {
               "Host": "localhost",
               "Port": 7113
            }
         ],
         "AuthenticationOptions": {
            "AuthenticationProviderKey": "Bearer"
         },
         "RouteClaimsRequirement": {
            "Role": "Admin"
         }
      }

   ],
   "GlobalConfiguration": {
      "BaseUrl": "https://localhost:7107"
   }

}