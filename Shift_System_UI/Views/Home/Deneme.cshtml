        text-align: center;
        margin-top: 20px;
    }

    .page-button {
        background-color: #007bff;
        color: white;
        border: none;
        padding: 10px 15px;
        margin: 0 5px;
        cursor: pointer;
        border-radius: 5px;
        font-size: 14px;
    }

        .page-button:hover {
            background-color: #0056b3;
        }

        .page-button.active {
            background-color: #0056b3;
            font-weight: bold;
        }

        .page-button:disabled {
            background-color: #cccccc;
            cursor: not-allowed;
        }
</style>


